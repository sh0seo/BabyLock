    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- main logo  -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/logo_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                app:layout_constraintTop_toTopOf="parent">
                <!-- logo -->
                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/ic_launcher_round"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <!-- img 0 -->
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_pets_black_24dp"
                    android:layout_marginRight="80dp"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintRight_toLeftOf="@+id/logo"
                    app:layout_constraintBottom_toTopOf="@+id/logo"
                    android:alpha="0.3"/>
                <!-- img 1 -->
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_palette_black_24dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintRight_toLeftOf="@+id/logo"
                    app:layout_constraintBottom_toTopOf="@+id/logo"
                    android:alpha="0.3"/>
                <!-- img 2 -->
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_music_note_black_24dp"
                    android:layout_marginRight="100dp"
                    android:layout_marginBottom="35dp"
                    app:layout_constraintRight_toLeftOf="@+id/logo"
                    app:layout_constraintBottom_toBottomOf="@+id/logo"
                    android:alpha="0.3"/>
                <!-- img 3 -->
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_mood_black_24dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintRight_toLeftOf="@+id/logo"
                    app:layout_constraintBottom_toBottomOf="@+id/logo"
                    android:alpha="0.3"/>
                <!-- img 4 -->
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_local_florist_black_24dp"
                    android:layout_marginRight="75dp"
                    android:layout_marginTop="-30dp"
                    app:layout_constraintRight_toLeftOf="@+id/logo"
                    app:layout_constraintTop_toBottomOf="@+id/logo"
                    android:alpha="0.3"/>
                <!-- img 5 -->
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_lightbulb_outline_black_24dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintRight_toLeftOf="@+id/logo"
                    app:layout_constraintTop_toBottomOf="@+id/logo"
                    android:alpha="0.3"/>
                <!-- img 6 -->
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_lightbulb_outline_black_24dp"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintLeft_toLeftOf="@+id/logo"
                    app:layout_constraintBottom_toTopOf="@+id/logo"
                    android:alpha="0.3"/>
                <!-- img 7 -->
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_healing_black_24dp"
                    android:layout_marginBottom="13dp"
                    app:layout_constraintLeft_toRightOf="@+id/logo"
                    app:layout_constraintBottom_toTopOf="@+id/logo"
                    android:alpha="0.3"/>
                <!-- img 8 -->
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_grade_black_24dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="53dp"
                    app:layout_constraintLeft_toRightOf="@+id/logo"
                    app:layout_constraintBottom_toTopOf="@+id/logo"
                    android:alpha="0.3"/>
                <!-- img 9 -->
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_filter_vintage_black_24dp"
                    android:layout_marginBottom="19dp"
                    android:layout_marginLeft="95dp"
                    app:layout_constraintLeft_toRightOf="@+id/logo"
                    app:layout_constraintBottom_toTopOf="@+id/logo"
                    android:alpha="0.3"/>
                <!-- img 10 -->
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_favorite_black_24dp"
                    android:layout_marginBottom="19dp"
                    android:layout_marginLeft="23dp"
                    app:layout_constraintLeft_toRightOf="@+id/logo"
                    app:layout_constraintBottom_toBottomOf="@+id/logo"
                    android:alpha="0.3"/>
                <!-- img 11 -->
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_face_black_24dp"
                    android:layout_marginBottom="32dp"
                    android:layout_marginLeft="87dp"
                    app:layout_constraintLeft_toRightOf="@+id/logo"
                    app:layout_constraintBottom_toBottomOf="@+id/logo"
                    android:alpha="0.3"/>
                <!-- img 12 -->
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_child_friendly_black_24dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="26dp"
                    app:layout_constraintLeft_toRightOf="@+id/logo"
                    app:layout_constraintTop_toBottomOf="@+id/logo"
                    android:alpha="0.3"/>
                <!-- img 13 -->
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_widgets_black_24dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="87dp"
                    app:layout_constraintLeft_toRightOf="@+id/logo"
                    app:layout_constraintTop_toBottomOf="@+id/logo"
                    android:alpha="0.3"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <FrameLayout
                android:id="@+id/content_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/logo_container"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

